# windows defaults
#           %OPENER%  start
#           %EDITOR%  notepad
#           %PAGER%   more
#           %SHELL%   cmd

# ============================ KEY BINDINGS ============================================
# avoid using confusing keys that are already bound to other functions by other programs, e.g. the console itself, like ctrl+c
# default reference: https://pkg.go.dev/github.com/gokcehan/lf

# key bindings
map v
map p
map x
map c
map v

# e edit
map e  # edit modal key.
map en $~/scripts/nano $env:f
map el $pwsh -File $env:USERPROFILE/.local/bin/lvim.ps1 -- $env:f
map ev $nvim $env:f
map ec $code $env:f
map ep $& 'C:\Program Files (x86)\JetBrains\PyCharm Community Edition 2022.2\bin\pycharm.exe' $f
map o  $start $env:f
map <enter> open

# w shells
map w
map ws $powershell
map wp $pwsh
map wcr $~/scripts/croshell.ps1
map wcm $cmd
map i $~/code/machineconfig/settings/lf/previewer.ps1 $env:f
map R $~/scripts/croshell.ps1 -r $env:f

# o file/folder Operations
map o
map od cut
map op paste
map oy copy
map oc $Set-Clipboard -Value $env:f
map c clear
map or rename
map <delete> delete
map of reload
map os mark-save
map ol mark-load
map oR mark-remove
map ox extract
cmd extract $cmd $env:USERPROFILE\code\machineconfig\settings\lf\extract.cmd -- $f


# j jump
map j
map jd cd ~/Downloads
map jc cd ~/code
map jm cd ~/code/machineconfig/src/machineconfig
map jh cd ~
map jD cd ~/dotfiles
map jj $pwsh -File $env:USERPROFILE/.local/bin/lvim.ps1 -- ~/code/machineconfig/settings/lf/lfrc


# m make
map m
map md $~/code/machineconfig/settings/lf/mkdir.ps1 
map mf $~/code/machineconfig/settings/lf/mkfile.ps1



# =================== JUNK ======================
# Find and Jump
cmd fzfg $~/scripts/fzfg.ps1 $args[0]
map J push :fzfg<space>
map F $~/code/machineconfig/settings/lf/fzf_nano.ps1
cmd doc $lf -doc | bat
cmd on-quit ~/code/machineconfig/settings/lf/lfcd.ps1
